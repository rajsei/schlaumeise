---
/**
 * PastelBox-Komponente
 * Props:
 * - title: string (Überschrift)
 * - text: string (Inhaltstext)
 * - color?: "yellow" | "blue" | "green" (optional)
 */

interface Props {
  title: string;
  text: string;
  color?: "yellow" | "blue" | "green";
}

const { title, text, color = "yellow" } = Astro.props;

// Farbzuordnung
const bgColor =
  color === "blue"
    ? "bg-blue-100"
    : color === "green"
    ? "bg-green-100"
    : "bg-yellow-100";
---

<div class={`pastel-box ${bgColor}`}>
  <h3 class="title">{title}</h3>
  <p class="content">{text}</p>
</div>

<style>
  .pastel-box {
    padding: 1rem 1.25rem;
    border-radius: 0.1rem;
    
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
    transition: background 0.3s ease;
  }

  .title {
    margin-top: 0;
    margin-bottom: 0.5rem;
    font-weight: 600;
    color: #2d2d2d;
    font-size: 1.1rem;
  }

  .content {
    margin: 0;
    color: #333;
    line-height: 1.5;
    font-size: 0.95rem;
  }

  /* Hover: etwas stärkerer Pastellton */
  .bg-yellow-100:hover { background-color: #fff4b5; }
  .bg-blue-100:hover   { background-color: #d9ecff; }
  .bg-green-100:hover  { background-color: #e0f8d8; }

  /* Pastellfarben (Tailwind ähnliche Werte) */
  .bg-yellow-100 { background-color: #fff9c4; }
  .bg-blue-100   { background-color: #dbeafe; }
  .bg-green-100  { background-color: #dcfce7; }
</style>
